@model ResetPasswordVM
<div class="col-12">
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Reset Password</h5>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        </div>
        <div class="card-body">
            <form method="post">
               
            
                
                <div class="mb-3">
                    <label class="form-label" asp-for="Password"></label>
                    <input asp-for="Password" class="form-control">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="CheckPassword"></label>
                    <input asp-for="CheckPassword" class="form-control">
                    <span asp-validation-for="CheckPassword" class="text-danger"></span>
                </div>


                @*  <div class="mb-3">
                <label class="form-label" asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
                </div>*@


                <button type="submit" class="btn btn-primary">Submit</button>
                <a asp-action="Index" class="btn btn-dark">Go Back</a>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

